<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Dementia Care</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50">

    <!-- Navbar -->
    <header class="bg-white shadow-md sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <a href="/" class="text-3xl font-semibold text-blue-600">ReMind</a>
                <div class="flex space-x-6">
                    <a href="/" class="text-gray-700 hover:text-blue-600 font-medium text-lg">Home</a>
                    <a href="/about" class="text-gray-700 hover:text-blue-600 font-medium text-lg">About</a>
                    <a href="/services" class="text-gray-700 hover:text-blue-600 font-medium text-lg">Services</a>
                    <a href="/contact" class="text-gray-700 hover:text-blue-600 font-medium text-lg">Contact</a>
                    <a href="/profile" class="text-gray-700 hover:text-blue-600 font-medium text-lg">Profile</a>
                </div>
            </div>
        </nav>
    </header>

    <!-- Profile Section -->
    <section class="container mx-auto mt-16 px-6 py-12 rounded-xl shadow-lg bg-white w-3/4">
        <div class="text-center mb-8">
            <h1 class="text-4xl font-semibold text-gray-800">User Profile</h1>
            <p class="text-gray-600 mt-2">View and manage your personal information</p>
        </div>

        <div class="space-y-4">
            <div class="bg-gray-100 p-6 rounded-lg shadow-md">
                <p class="text-lg font-semibold text-gray-700">Name</p>
                <p class="text-gray-600 text-xl"><%= user.name %></p>
            </div>

            <div class="bg-gray-100 p-6 rounded-lg shadow-md">
                <p class="text-lg font-semibold text-gray-700">Email</p>
                <p class="text-gray-600 text-xl"><%= user.email %></p>
            </div>
        </div>

        <div class="mt-6 text-center">
            <a href="/logout" class="inline-block bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-300">
                Logout
            </a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 mt-24 py-12 text-white">
        <div class="container mx-auto px-6 text-center">
            <p>&copy; 2025 DementiaCare. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>
